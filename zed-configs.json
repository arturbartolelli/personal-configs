{
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Carbonfox"
  },
  "autosave": "on_focus_change",
